    <div class="fixed top-6 left-6 flex items-center gap-2">
        <div class="w-3 h-3 bg-sky-500 rounded-full animate-pulse"></div>
        <span class="text-xl font-800 tracking-tighter uppercase">CORE<span class="text-sky-400">LOGIC1</span></span>
    </div>

    <div class="max-w-4xl mx-auto mt-20">
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold mb-2">Universal Calculator</h1>
            <p class="text-slate-400">Select a mode to begin processing.</p>
        </div>

        <div class="flex flex-wrap justify-center gap-2 mb-8">
            <button onclick="switchMode('basic')" class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-sky-900 border border-slate-700 transition">Basic/Sci</button>
            <button onclick="switchMode('area')" class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-sky-900 border border-slate-700 transition">Area & Volume</button>
            <button onclick="switchMode('units')" class="px-4 py-2 rounded-lg bg-slate-800 hover:bg-sky-900 border border-slate-700 transition">Unit Converter</button>
        </div>

        <div class="glass p-6 rounded-3xl shadow-2xl max-w-md mx-auto">
            
            <div class="bg-slate-900 p-6 rounded-2xl mb-6 text-right border border-slate-800">
                <div id="prev-op" class="text-slate-500 text-sm h-6"></div>
                <div id="display" class="text-4xl font-mono font-bold truncate">0</div>
            </div>

            <div id="mode-basic" class="grid grid-cols-4 gap-3">
                <button onclick="clearDisplay()" class="btn-calc text-red-400">AC</button>
                <button onclick="appendDisplay('(')" class="btn-calc text-sky-400">(</button>
                <button onclick="appendDisplay(')')" class="btn-calc text-sky-400">)</button>
                <button onclick="appendDisplay('/')" class="btn-op">÷</button>
                <button onclick="appendDisplay('7')" class="btn-calc">7</button>
                <button onclick="appendDisplay('8')" class="btn-calc">8</button>
                <button onclick="appendDisplay('9')" class="btn-calc">9</button>
                <button onclick="appendDisplay('*')" class="btn-op">×</button>
                <button onclick="appendDisplay('4')" class="btn-calc">4</button>
                <button onclick="appendDisplay('5')" class="btn-calc">5</button>
                <button onclick="appendDisplay('6')" class="btn-calc">6</button>
                <button onclick="appendDisplay('-')" class="btn-op">-</button>
                <button onclick="appendDisplay('1')" class="btn-calc">1</button>
                <button onclick="appendDisplay('2')" class="btn-calc">2</button>
                <button onclick="appendDisplay('3')" class="btn-calc">3</button>
                <button onclick="appendDisplay('+')" class="btn-op">+</button>
                <button onclick="mathFunc('Math.sin')" class="btn-calc text-xs">SIN</button>
                <button onclick="appendDisplay('0')" class="btn-calc">0</button>
                <button onclick="appendDisplay('.')" class="btn-calc">.</button>
                <button onclick="calculate()" class="btn-op bg-emerald-600 hover:bg-emerald-500">=</button>
                <button onclick="mathFunc('Math.sqrt')" class="btn-calc text-xs">√</button>
                <button onclick="mathFunc('Math.PI')" class="btn-calc text-xs">π</button>
                <button onclick="mathFunc('Math.log10')" class="btn-calc text-xs">LOG</button>
                <button onclick="mathFunc('Math.pow')" class="btn-calc text-xs">xʸ</button>
            </div>

            <div id="mode-area" class="hidden space-y-4">
                <select id="geo-type" class="w-full p-3 rounded-xl bg-slate-800 border border-slate-700">
                    <option value="square">Area: Square (Side²)</option>
                    <option value="circle">Area: Circle (πr²)</option>
                    <option value="cube">Volume: Cube (s³)</option>
                    <option value="sphere">Volume: Sphere (4/3πr³)</option>
                </select>
                <input type="number" id="geo-input" placeholder="Enter Value" class="w-full p-4 rounded-xl bg-slate-900 border border-slate-700">
                <button onclick="calcGeo()" class="w-full btn-op py-4">Calculate Geometry</button>
            </div>

            <div id="mode-units" class="hidden space-y-4">
                <div class="grid grid-cols-2 gap-2">
                    <input type="number" id="unit-input" placeholder="Value" class="p-4 rounded-xl bg-slate-900 border border-slate-700">
                    <select id="unit-type" class="p-4 rounded-xl bg-slate-800 border border-slate-700">
                        <option value="kg-g">kg to g</option>
                        <option value="g-kg">g to kg</option>
                        <option value="m-km">m to km</option>
                        <option value="km-m">km to m</option>
                    </select>
                </div>
                <button onclick="calcUnits()" class="w-full btn-op py-4">Convert Units</button>
            </div>

        </div>
    </div>

    <script>
        const display = document.getElementById('display');
        const prev = document.getElementById('prev-op');

        function switchMode(mode) {
            document.getElementById('mode-basic').classList.add('hidden');
            document.getElementById('mode-area').classList.add('hidden');
            document.getElementById('mode-units').classList.add('hidden');
            document.getElementById('mode-' + mode).classList.remove('hidden');
        }

        function appendDisplay(val) {
            if(display.innerText === '0') display.innerText = val;
            else display.innerText += val;
        }

        function clearDisplay() {
            display.innerText = '0';
            prev.innerText = '';
        }

        function calculate() {
            try {
                prev.innerText = display.innerText;
                display.innerText = eval(display.innerText.replace('^', '**'));
            } catch {
                display.innerText = "Error";
            }
        }

        function mathFunc(fn) {
            if(fn === 'Math.pow') display.innerText += '**';
            else if(fn === 'Math.PI') display.innerText = Math.PI.toFixed(4);
            else display.innerText = eval(fn + "(" + display.innerText + ")");
        }

        function calcGeo() {
            const type = document.getElementById('geo-type').value;
            const val = parseFloat(document.getElementById('geo-input').value);
            let res = 0;
            if(type === 'square') res = val * val;
            if(type === 'circle') res = Math.PI * val * val;
            if(type === 'cube') res = val ** 3;
            if(type === 'sphere') res = (4/3) * Math.PI * (val ** 3);
            display.innerText = res.toFixed(2);
        }

        function calcUnits() {
            const type = document.getElementById('unit-type').value;
            const val = parseFloat(document.getElementById('unit-input').value);
            let res = 0;
            if(type === 'kg-g') res = val * 1000;
            if(type === 'g-kg') res = val / 1000;
            if(type === 'm-km') res = val / 1000;
            if(type === 'km-m') res = val * 1000;
            display.innerText = res + (type.split('-')[1]);
        }
    </script>
</body>
