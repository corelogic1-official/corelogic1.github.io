        .glass { background: rgba(30, 41, 59, 0.7); backdrop-filter: blur(10px); border: 1px solid rgba(255,255,255,0.1); }
        .btn-calc { @apply bg-slate-700 hover:bg-slate-600 p-4 rounded-xl font-bold transition-all active:scale-95; }
        .btn-op { @apply bg-sky-600 hover:bg-sky-500 p-4 rounded-xl font-bold transition-all; }
        input select { background: #1e293b; color: white; border: 1px solid #334155; }
